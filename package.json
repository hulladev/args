{
  "name": "args",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "commitizen": "^4.3.1",
    "cz-emoji": "1.3.2-canary.2",
    "husky": "^9.1.7",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipScope": true,
      "scopes": [
        "args",
        "docs",
        "repo"
      ],
      "types": [
        {
          "emoji": "‚úÖ",
          "code": ":white_check_mark: feat:",
          "description": "a new functionality",
          "name": "feat"
        },
        {
          "emoji": "üêû",
          "code": ":lady_beetle: fix:",
          "description": "a bug fix",
          "name": "fix"
        },
        {
          "emoji": "üîß",
          "code": ":wrench: update:",
          "description": "a code change that neither fixes a bug nor adds a feature",
          "name": "update"
        },
        {
          "emoji": "üìö",
          "code": ":books: docs:",
          "description": "documentations",
          "name": "docs"
        },
        {
          "emoji": "üß™",
          "code": ":test_tube: tests:",
          "description": "tests",
          "name": "tests"
        },
        {
          "emoji": "ü™õ",
          "code": ":screwdriver: config:",
          "description": "configuration files",
          "name": "config"
        },
        {
          "emoji": "ü§ñ",
          "code": ":robot: devops:",
          "description": "ci/cd or other form of automation",
          "name": "devops"
        },
        {
          "emoji": "‚ôªÔ∏è",
          "code": ":recycle: cleanup:",
          "description": "code cleanup",
          "name": "cleanup"
        },
        {
          "emoji": "üì¶",
          "code": ":package: release:",
          "description": "new release bundle",
          "name": "release"
        }
      ]
    }
  }
}
